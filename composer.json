{
    "name": "bellum-industria/www",
    "description": "www.bellum-industria.fr",
    "keywords": ["bellum", "industria"],
    "license": "copyright",
    "type": "project",
    "require": {
        "php": ">=5.6.4",
        "invisnik/laravel-steam-auth": "^2.3",
        "laravel/framework": "5.4.*",
        "laravel/socialite": "^3.0",
        "laravel/tinker": "~1.0",
        "laravelcollective/html": "^5.4",
        "league/fractal": "^0.16.0",
        "madcoda/php-youtube-api": "^1.2",
        "predis/predis": "^1.1",
        "prettus/l5-repository": "^2.6",
        "riari/laravel-forum": "~4.0",
        "riari/laravel-forum-frontend": "~1.0",
        "sentry/sentry-laravel": "^0.7.0",
        "spatie/laravel-sitemap": "^2.2",
        "thujohn/twitter": "^2.2"
    },
    "require-dev": {
        "barryvdh/laravel-debugbar": "^2.3",
        "barryvdh/laravel-ide-helper": "^2.3",
        "blackfire/php-sdk": "^1.8",
        "deployer/deployer": "^5.0",
        "fzaninotto/faker": "~1.4",
        "mockery/mockery": "0.9.*",
        "phpunit/php-code-coverage": "^4.0.4",
        "phpunit/phpunit": "~5.7",
        "pragmarx/laravelcs": "^0.1.0",
        "sebastian/phpcpd": "^2.0",
        "squizlabs/php_codesniffer": "^2.7"
    },
    "autoload": {
        "classmap": [
            "database"
        ],
        "psr-4": {
            "bellumindustria\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-root-package-install": [
            "php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "php artisan key:generate"
        ],
        "post-install-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postInstall",
            "php artisan optimize"
        ],
        "post-update-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postUpdate",
            "php artisan optimize",
            "php artisan sitemap:generate"
        ],
        "tests:phpunit": [
            "docker-compose --project-name benevaut exec -T workspace php /var/www/vendor/bin/phpunit"
        ],
        "tests:phpcs": [
            "docker-compose --project-name benevaut exec -T workspace php /var/www/vendor/bin/phpcs --standard=/var/www/vendor/pragmarx/laravelcs/Standards/Laravel/ app"
        ],
        "tests:duplicated": [
            "docker-compose --project-name benevaut exec -T workspace php /var/www/vendor/bin/phpcpd app"
        ],
        "deploy": [
            "vendor/bin/dep -vvv deploy abenevaut.frb.io"
        ],
        "deploy-unlock": [
            "vendor/bin/dep deploy:unlock abenevaut.frb.io"
        ],
        "docker": [
            "docker-compose --project-name benevaut up -d apache2 php-fpm php-worker mysql redis blackfire mailhog"
        ],
        "docker-stop": [
            "docker-compose --project-name benevaut stop"
        ]
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    }
}

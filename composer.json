{
    "name": "bellum-industria/www",
    "description": "www.bellum-industria.fr",
    "keywords": ["bellum", "industria"],
    "license": "copyright",
    "type": "project",
    "require": {
        "php": ">=7.0.0",
        "ext-bcmath": "*",
        "barryvdh/laravel-dompdf": "^0.8.1",
        "barryvdh/laravel-elfinder": "^0.3.11",
        "invisnik/laravel-steam-auth": "3.2.*",
        "lab404/laravel-impersonate": "^1.2",
        "laravel-notification-channels/facebook-poster": "^1.1",
        "laravel-notification-channels/twitter": "^1.0",
        "laravel/framework": "5.5.*",
        "laravel/socialite": "^3.0",
        "laravel/tinker": "~1.0",
        "laravelcollective/html": "^5.4",
        "league/fractal": "^0.16.0",
        "league/glide": "^1.2",
        "madcoda/php-youtube-api": "^1.2",
        "ollyxar/laravel-auth": "^1.1",
        "ollyxar/websockets": "^1.2",
        "predis/predis": "^1.1",
        "prettus/l5-repository": "^2.6",
        "pusher/pusher-php-server": "^3.0",
        "riari/laravel-forum": "~4.0",
        "riari/laravel-forum-frontend": "~1.0",
        "sentry/sentry-laravel": "^0.7.0",
        "spatie/laravel-analytics": "^3.4",
        "spatie/laravel-backup": "^5.1",
        "spatie/laravel-medialibrary": "^6.6",
        "spatie/laravel-sitemap": "^3.3",
        "thujohn/twitter": "^2.2"
    },
    "require-dev": {
        "barryvdh/laravel-debugbar": "^2.3",
        "barryvdh/laravel-ide-helper": "^2.3",
        "blackfire/php-sdk": "^1.8",
        "deployer/deployer": "^5.0",
        "doctrine/dbal": "^2.6",
        "fzaninotto/faker": "~1.4",
        "mockery/mockery": "0.9.*",
        "phpunit/php-code-coverage": "^4.0.4",
        "phpunit/phpunit": "~5.7",
        "pragmarx/laravelcs": "^0.1.0",
        "sebastian/phpcpd": "^2.0",
        "squizlabs/php_codesniffer": "^2.7"
    },
    "autoload": {
        "classmap": [
            "database"
        ],
        "psr-4": {
            "bellumindustria\\": "app/"
        },
        "files": [
            "app/App/Services/PagesPaginationsHelpers.php",
            "app/App/Services/HighChartsHelpers.php",
            "app/App/Services/TimeZonesHelpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-root-package-install": [
            "php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "php artisan key:generate"
        ],
        "post-install-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postInstall",
            "php artisan optimize"
        ],
        "post-update-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postUpdate",
            "php artisan optimize"
        ],
        "tests:phpunit": [
            "docker-compose --project-name bellumindustria exec -T workspace php /var/www/vendor/bin/phpunit"
        ],
        "tests:phpcs": [
            "docker-compose --project-name bellumindustria exec -T workspace php /var/www/vendor/bin/phpcs --standard=/var/www/vendor/pragmarx/laravelcs/Standards/Laravel/ app"
        ],
        "tests:duplicated": [
            "docker-compose --project-name bellumindustria exec -T workspace php /var/www/vendor/bin/phpcpd app"
        ],
        "deploy": [
            "vendor/bin/dep -vvv deploy bellumindustria.frb.io"
        ],
        "deploy:unlock": [
            "vendor/bin/dep deploy:unlock bellumindustria.frb.io"
        ],
        "docker": [
            "docker-compose --project-name bellumindustria up -d apache2 php-fpm php-worker mysql redis blackfire mailhog"
        ],
        "docker:migrate": [
            "docker-compose --project-name bellumindustria exec -T workspace php /var/www/artisan migrate"
        ],
        "docker:migrate:rollback": [
            "docker-compose --project-name bellumindustria exec -T workspace php /var/www/artisan migrate:rollback"
        ],
        "docker:backup": [
            "docker-compose --project-name bellumindustria exec -T workspace php /var/www/artisan backup:run"
        ],
        "docker:build": [
            "docker-compose --project-name bellumindustria build apache2 php-fpm php-worker mysql redis blackfire mailhog"
        ],
        "docker:stop": [
            "docker-compose --project-name bellumindustria stop"
        ],
        "docker:remove": [
            "docker-compose --project-name bellumindustria rm -f"
        ]
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    }
}
